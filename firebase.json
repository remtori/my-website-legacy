{
  "database": {
    "rules": "database-rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "database-rules.json",
      "package.json",
      "package-lock.json"
    ],
    "rewrites": [ 
      {
        "source": "**",
        "destination": "/index.html"
      } 
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000"
          }
        ]
      }
    ]
  }
}
