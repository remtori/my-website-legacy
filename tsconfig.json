{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es5",
		"downlevelIteration": true,
		"module": "esnext",
		"jsx": "react",
		"jsxFactory": "h",
		"strict": true,
		"moduleResolution": "node",
		"composite": true,
		"declarationMap": true,
		"sourceMap": true,
		"importHelpers": true,
		"lib": [ "esnext", "dom", "dom.iterable" ],
		"skipLibCheck": true,
		"types": [ ],
		"baseUrl": "./",
		"paths": {
			"~/*": [ "./src/*" ]
		}
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node_modules/**/*"
	]
  }